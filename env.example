# FLUENTGO CONFIGURATION

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# FastAPI приложение (доступно снаружи)
APP_HOST=0.0.0.0
APP_PORT=8055

# PostgreSQL (рекомендуется 127.0.0.1 для безопасности)
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# Лимиты ресурсов для контейнеров
APP_MEMORY_LIMIT=4G
APP_CPU_LIMIT=2.0
APP_MEMORY_RESERVATION=2G
APP_CPU_RESERVATION=1.0

POSTGRES_MEMORY_LIMIT=1G
POSTGRES_CPU_LIMIT=0.5

# =============================================================================
# СЕРВЕР (ОБЯЗАТЕЛЬНО НАСТРОИТЬ!)
# =============================================================================

# Префикс для всех API роутов
SERVER_PREFIX=/fluent

# =============================================================================
# БАЗА ДАННЫХ (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ ПАРОЛЬ!)
# =============================================================================

POSTGRES_DB=fluentgo
POSTGRES_USER=fluentgo_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# URL для подключения (должен соответствовать настройкам выше)
DATABASE_URL=postgresql+asyncpg://fluentgo_user:CHANGE_ME_IN_PRODUCTION@postgres:5432/fluentgo

# =============================================================================
# API КЛЮЧИ (ОБЯЗАТЕЛЬНО ЗАПОЛНИТЬ!)
# =============================================================================

# OpenAI API ключ
OPENAI_API_KEY=sk-your_openai_api_key_here

# ElevenLabs API ключ (опционально)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# OpenAI Assistant ID (опционально)
OPENAI_ASSISTANT=asst_your_assistant_id_here

# =============================================================================
# БЕЗОПАСНОСТЬ (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
# =============================================================================

# JWT секретный ключ
JWT_secret=CHANGE_ME_TO_RANDOM_SECRET_KEY_IN_PRODUCTION

# Пароль для доступа к отчетам
REPORT_PASSWORD=CHANGE_ME_IN_PRODUCTION

# =============================================================================
# ПЛАТЕЖНАЯ СИСТЕМА
# =============================================================================

# URL платежного API
PAYMENT_API_URL=https://your-payment-api-url.com

# Bearer токен для платежного API
PAYMENT_API_TOKEN=your_payment_api_token_here

# Webhook URL для уведомлений о платежах
WEBHOOK_URL=https://your-domain.com/fluent/api/webhook/payment

# URL возврата после оплаты
PAYMENT_RETURN_URL=https://your-domain.com/fluent/

# Токен авторизации для входящих webhook
WEBHOOK_AUTH_TOKEN=CHANGE_ME_RANDOM_WEBHOOK_TOKEN

# =============================================================================
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальный размер загружаемых файлов (в байтах, 100MB по умолчанию)
MAX_FILE_SIZE=104857600

# Таймаут WebSocket соединений (в секундах)
WEBSOCKET_TIMEOUT=300
