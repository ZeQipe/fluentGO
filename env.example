# =============================================================================
# FLUENTGO SERVER CONFIGURATION
# =============================================================================

# Основные настройки сервера
PORT=8055
DEBUG=false
PYTHONPATH=/app

# Префикс для всех роутов (например: /fluent)
SERVER_PREFIX=/fluent

# Поддерживаемые языки (через запятую)
SUPPORTED_LANGUAGES=ru,en,fr,it,es,de

# =============================================================================
# API КЛЮЧИ (ОБЯЗАТЕЛЬНО ЗАПОЛНИТЬ!)
# =============================================================================

# OpenAI API ключ для GPT и TTS
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API ключ для голосового синтеза
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ID голоса ElevenLabs (опционально)
ELEVENLABS_VOICE_ID=your_voice_id_here

# OpenAI Assistant ID (опционально)
OPENAI_ASSISTANT=your_assistant_id_here

# =============================================================================
# JWT И БЕЗОПАСНОСТЬ
# =============================================================================

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
JWT_secret=your_super_secret_jwt_key_change_this_in_production

# Настройки куки для продакшена
COOKIE_SECURE=true

# =============================================================================
# WEBSOCKET ENDPOINTS
# =============================================================================

# VAD Realtime WebSocket endpoint
VAD_WS_ENDPOINT=wss://your-domain.com/fluent/ws

# Button Realtime WebSocket endpoint  
BUTTON_WS_ENDPOINT=wss://your-domain.com/fluent/ws-button

# Button Upload endpoint
BUTTON_UPLOAD_ENDPOINT=https://your-domain.com/fluent/api/upload-audio/

# =============================================================================
# CORS НАСТРОЙКИ
# =============================================================================

# Разрешенные origins (для продакшена указать конкретные домены)
ALLOWED_ORIGINS=https://your-domain.com,http://127.0.0.1:3000,http://localhost:3000

# =============================================================================
# БАЗА ДАННЫХ И ФАЙЛЫ
# =============================================================================

# Путь к базе данных SQLite
DATABASE_PATH=./users.db

# Директория для временных аудио файлов
TEMP_AUDIO_DIR=./temp

# =============================================================================
# ПЛАТЕЖНАЯ СИСТЕМА
# =============================================================================

# URL платежного API (sandbox или production)
PAYMENT_API_URL=https://esim-sandbox.oxem.dev

# Webhook URL для уведомлений о платежах
WEBHOOK_URL=https://your-domain.com/fluent/api/webhook/payment

# URL возврата после успешной оплаты
PAYMENT_RETURN_URL=https://your-domain.com/fluent/payment/success

# Токен авторизации для webhook (опционально)
WEBHOOK_AUTH_TOKEN=your_webhook_auth_token_here

# =============================================================================
# FRONTEND НАСТРОЙКИ (для Next.js)
# =============================================================================

# URL API (пустой если API на том же домене)
NEXT_PUBLIC_API_URL=

# URL для загрузки аудио
NEXT_PUBLIC_UPLOAD_URL=/fluent/api/upload-audio/

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# Redis URL (если используется кэширование)
REDIS_URL=redis://redis:6379

# Логирование
LOG_LEVEL=INFO

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE=104857600

# Таймаут для WebSocket соединений (в секундах)
WEBSOCKET_TIMEOUT=300
